let c = document.getElementById("container");
let ca = document.getElementById("carroussel")

c.appendChild(c.firstElementChild.cloneNode());
c.lastElementChild.innerHTML = c.firstElementChild.innerHTML;


async function turn(){
  for(let i = 0; i <= c.childElementCount; i++){
    await sleep(3000);
    c.style.transform = `translateX(-${i*window.innerWidth}px)`
  }
  turn();
}

function sleep(ms) {
  return new Promise(resolve => setTimeout(resolve, ms));
}

function waitForShift(el){
  el.classList.add('noTransition');
  while(true){
    for(let i = 0; i < el.classList.length; i++){
      if(el.classList[i] == "noTransition"){
        return;
      }
    }
  }

}